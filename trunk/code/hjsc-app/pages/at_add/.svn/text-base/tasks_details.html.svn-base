<!doctype html>
<html>

	<head>
		<meta charset="UTF-8" http-equiv="Access-Control-Allow-Origin" content="*">
        
		<title>任务详情</title>
		<meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
		<link rel="stylesheet" href="../../css/mui.min.css" />
		<link rel="stylesheet" href="../../css/index.css" />
		<link rel="stylesheet" href="../../css/mui.picker.min.css" />
	</head>
	<style>
		.tit-right {
			height: 50px;
			line-height: 50px;
			font-size: 15px;
			color: #fff;
		}
		
		.w100 {
			width: 100%;
			padding: 10px 15px 5px 15px;
			display: inline-block;
			border-bottom: 1px solid #EEEEEE;
		}
		
		.list-img {
			width: 45px;
			margin-top: 5px;
		}
		
		.list-title {
			font-size: 14px;
			color: #333;
		}
		
		.list-detail {
			float: left;
			padding-left: 10px;
			width: 80%;
		}
		
		.fwb {
			letter-spacing: 1px;
		}
		
		.edit {
			width: 15px;
			height: 15px;
			margin-left: 5px;
		}
		
		.mui-table-view:before,
		.mui-table-view:after {
			display: none;
		}
		/*右侧箭头*/
		
		.mui-navigate-right:after,
		.mui-push-right:after {
			top: 50%;
			right: 35px;
		}
		/*右侧文字*/
		
		.mui-table-view-chevron .mui-table-view-cell>a:not(.mui-btn) {
			margin-right: -95px;
		}
		.mui-table-view-chevron .mui-table-view-cell{
			padding-right: 55px;
		}
	</style>

	<body>
    <div id="home_vue" v-cloak>
    	
    
		<header class="mui-bar mui-bar-nav" >
			<a class="mui-action-back mui-icon mui-icon-left-nav mui-pull-left" ></a>
			<h1 class="mui-title">任务详情</h1>
			<!--<a class="mui-pull-right tit-right" href="javascript:void(0)">编辑</a>-->
		</header>
		<div id="home_scroll" class="mui-content mui-scroll-wrapper">
			<div class="mui-scroll" id="sz_app">

				<ul class="mui-table-view table" id="tableList">
					<p class="w100"><span class="fl">#{{completeTaskCode}}</span><span class="fr">{{verifyStatusStr}}</span></p>

					<li class="mui-table-view-cell filelist">
						<div class="list-detail-img fl">
							<img class="list-img" src="../../icon/cpsldh1.png" />
						</div>
						<div class="list-detail list-detail-font">
							<p class="list-title fl"><small class="fl fblue fwb">#{{completeTaskCode}}</small><span class="hone fl mw80 fwb">{{taskName}}</span><img src="../../icon/ztzw_4.png" class="edit" /></p><br/>
							<p class="list-time f6e">计划状态 :{{actualStatusStr}}</p>
							<p class="list-time fgreen">实际状态 :{{taskStatusStr}}</p>
						</div>

					</li>
				</ul>

				<!--第一栏-->
				<ul class="mui-table-view mui-table-view-chevron mt16">
					<li class="mui-table-view-cell">
						<a href="javascript:void(0)">
							<span>任务组别</span>
							<span class="fr btn">{{taskStart|switchingTime7}}</span>
						</a>
					</li>
					<li class="mui-table-view-cell">
						<a href="javascript:void(0)" >
							<span>优先级</span>
							<span class="fr">{{taskUserGroup}}</span>
						</a>
					</li>
					<!--<li class="mui-table-view-cell">
						<span>关键任务</span>
						<div name="myswitch" index="0" class="mui-switch mui-switch-mini mui-switch-blue">
							<div class="mui-switch-handle"></div>
						</div>
					</li>-->
				</ul>

				<!--第二栏-->
				<ul class="mui-table-view mui-table-view-chevron mt16">
					<li class="mui-table-view-cell">
						<a href="javascript:void(0)" >
							<span>计划开始</span>
							<span class="fr btn1">{{taskStart|switchingTime7}}</span>
						</a>
					</li>
					<li class="mui-table-view-cell">
						<a href="javascript:void(0)" >
							<span>计划结束</span>
							<span class="fr">{{taskEnd|switchingTime7}}</span>
						</a>
					</li>
					<li class="mui-table-view-cell">
						<a href="javascript:void(0)" >
							<span>实际开始</span>
							<span class="fr btn1">{{realTaskStart|switchingTime7}}</span>
						</a>
					</li>
					<li class="mui-table-view-cell">
						<a href="javascript:void(0)" >
							<span>实际结束</span>
							<span class="fr btn1">{{realTaskEnd|switchingTime7}}</span>
						</a>
					</li>
					<li class="mui-table-view-cell">
						<a href="javascript:void(0)" >
							<span class="fl">计划天数</span>
							<span class="fr">{{taskDuration}}</span>
						</a>
					</li>
				</ul>

				<!--第三栏-->
				<ul class="mui-table-view mui-table-view-chevron mt16">
					<li class="mui-table-view-cell">
						<a href="javascript:void(0)" >
							<span class="fl">负责群组</span>
							<span class="fr">{{taskUserGroupName}}</span>
						</a>
					</li>
					<li class="mui-table-view-cell">
						<a href="javascript:void(0)" >
							<span class="fl">负责人</span>
							<span class="fr">{{createUserName}}</span>
						</a>
					</li>
					<li class="mui-table-view-cell">
						<a href="javascript:void(0)" >
							<span class="fl">计划群组</span>
							<span class="fr">{{taskUserGroupName}}</span>
						</a>
					</li>
					<li class="mui-table-view-cell">
						<a href="javascript:void(0)" >
							<span class="fl">计划人</span>
							<span class="fr">{{createUserName}}</span>
						</a>
					</li>
				</ul>

				<!--第四栏-->
				<ul class="mui-table-view mui-table-view-chevron mt16">
					<li class="mui-table-view-cell">
						<a href="javascript:void(0)" >
							<span class="fl">图片</span>
							<span class="fr">{{attachList}}</span>
						</a>
					</li>
					<li class="mui-table-view-cell">
						<a href="javascript:void(0)" >
							<span class="fl">清单</span>
							<span class="fr">{{fileList}}</span>
						</a>
					</li>
					<li class="mui-table-view-cell">
						<a href="javascript:void(0)" >
							<span class="fl">文档</span>
							<span class="fr">{{fileList}}</span>
						</a>
					</li>
					<li class="mui-table-view-cell">
						<a href="javascript:void(0)" >
							<span class="fl">核实记录</span>
							<span class="fr">{{verifyList}}</span>
						</a>
					</li>
				</ul>

			</div>
		</div>

		</div>
		</div>
		</div>
